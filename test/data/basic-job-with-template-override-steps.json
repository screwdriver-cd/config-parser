{
    "annotations": {},
    "jobs": {
        "main": [{
            "annotations": {},
            "image": "node:4",
            "commands": [
                {
                    "name": "install",
                    "command": "npm install"
                },
                {
                    "name": "pretest",
                    "command": "echo pre-test"
                },
                {
                    "name": "test",
                    "command": "echo 'my job is overriding this step'"
                }
            ],
            "environment": {
                "FOO": "from template",
                "BAR": "foo"
            },
            "secrets": [
                "GIT_KEY"
            ],
            "settings": {
                "email": "foo@example.com"
            },
            "requires": [
                "~pr",
                "~commit"
            ]
        }]
    },
    "workflowGraph": {
        "nodes": [
            { "name": "~pr" },
            { "name": "~commit" },
            { "name": "main" }
        ],
        "edges": [
            { "src": "~pr", "dest": "main" },
            { "src": "~commit", "dest": "main" }
        ]
    }
}
