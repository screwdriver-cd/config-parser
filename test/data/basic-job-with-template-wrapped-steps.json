{
    "annotations": {},
    "jobs": {
        "main": [{
            "annotations": {},
            "image": "node:4",
            "commands": [
                {
                    "name": "install",
                    "command": "npm install"
                },
                {
                    "name": "postinstall",
                    "command": "echo post-install"
                },
                {
                    "name": "pretest",
                    "command": "echo pre-test"
                },
                {
                    "name": "test",
                    "command": "npm test"
                }
            ],
            "environment": {
                "FOO": "from template",
                "BAR": "foo"
            },
            "secrets": [
                "GIT_KEY"
            ],
            "settings": {
                "email": "foo@example.com"
            }
        }]
    },
    "workflow": [
        "main"
    ],
    "workflowGraph": {
        "nodes": [
            { "name": "~pr" },
            { "name": "~commit" },
            { "name": "main" }
        ],
        "edges": [
            { "src": "~pr", "dest": "main" },
            { "src": "~commit", "dest": "main" }
        ]
    }
}
